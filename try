        <form action="#" id="record-form">
            <label for="mood">今天的心情：</label><br> <!-- Updated labels to Chinese -->
            <textarea id="mood" name="mood" placeholder="今天你的心情如何？"></textarea><br>

            <label for="outfit">今天的穿搭：</label><br>
            <textarea id="outfit" name="outfit" placeholder="描述一下你今天的穿搭。"></textarea><br>

            <label for="activities">今天做了什么：</label><br>
            <textarea id="activities" name="activities" placeholder="列出你今天做的活动。"></textarea><br>

            <input type="submit" value="保存记录">
            <p class="record-warning" id="record-warning"></p>
        </form>

