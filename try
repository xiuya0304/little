    <div id="sidebar">

        <h2>记录列表</h2> <!-- Updated heading -->

        <div id="record-calendar">
            <!-- Entries will be dynamically added here -->
        </div>

    </div>

    <script>
        document.getElementById('record-form').addEventListener('submit', function (event) {
            event.preventDefault();

            // Get date and entry values
            var date = new Date().toLocaleDateString();
            var mood = document.getElementById('mood').value;
            var outfit = document.getElementById('outfit').value;
            var activities = document.getElementById('activities').value;

            // Check if entry for the current date already exists
            var existingEntry = document.querySelector(`#record-calendar div[data-date="${date}"]`);

            if (existingEntry) {
                // Show warning if entry already exists
                document.getElementById('record-warning').innerText = "你已经记录过今天了，刚才的记录是真实的。";
            } else {
                // Create a new entry
                var entryDisplay = document.createElement('div');
                entryDisplay.setAttribute('data-date', date);
                entryDisplay.innerHTML = `${date}:<br>心情：${mood}<br>穿搭：${outfit}<br>活动：${activities}`;
                document.getElementById('record-calendar').appendChild(entryDisplay);

                // Clear input fields and warning
                document.getElementById('mood').value = '';
                document.getElementById('outfit').value = '';
                document.getElementById('activities').value = '';
                document.getElementById('record-warning').innerText = '';
            }
        });
    </script>

